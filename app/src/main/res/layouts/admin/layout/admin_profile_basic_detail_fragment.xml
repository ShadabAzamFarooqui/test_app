<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_menu"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    app:errorTextAppearance="@style/WelcomeErrorAppearance">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_border"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <TextView
                            style="@style/font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="@string/first_name"
                            android:textSize="@dimen/sp_12" />

                        <EditText
                            android:id="@+id/firstName"
                            style="@style/font"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_15"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLength="50"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_15"
                            android:autofillHints=""
                            tools:ignore="LabelFor" />
                    </LinearLayout>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastNameError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                app:errorTextAppearance="@style/WelcomeErrorAppearance">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/last_name_w_star"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/lastName"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLength="50"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/mobileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border_selector"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/mobile_no_star"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/mobile"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/enrollment_id_s"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/enrolmentId"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/email_w_star"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/email"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:autofillHints=""
                    tools:ignore="LabelFor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/gender"
                    android:textSize="@dimen/sp_12" />

                <Spinner
                    android:id="@+id/gender"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:entries="@array/gender"

                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:spinnerMode="dialog"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/dateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/dob_tv"
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/dob_star"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/dob"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dob_tv"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@id/datePicker"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/datePicker"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBaseline="@+id/dob_tv"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/date_icon"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>








            <Button
                android:id="@+id/submit"
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/dp_25"
                android:background="@drawable/gradient_button"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

