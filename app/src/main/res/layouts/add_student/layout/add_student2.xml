<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_menu"
    android:orientation="vertical">

    <include layout="@layout/header_back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/father_s_detail"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/father_s_name"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/fatherName"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/mobile_no"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/fatherMobile"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/occupation"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/fatherOccupation"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/qualification"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/fatherQualification"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/annual_income"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/fatherIncome"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:entries="@array/gender"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <TextView
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/mother_s_detail"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/name"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/motherName"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/mobile_no"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/motherMobile"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/occupation"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/motherOccupation"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/qualification"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/motherQualification"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/annual_income"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/motherIncome"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:entries="@array/gender"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <Button
                android:id="@+id/submit"
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/gradient_button"
                android:text="@string/save_amp_next"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />


            <LinearLayout
                android:id="@+id/skipLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="@string/skip"
                        android:textColor="@color/parent_dark_blue"
                        android:textSize="@dimen/dp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignLeft="@+id/skip"
                        android:layout_alignRight="@+id/skip"
                        android:layout_below="@+id/skip"
                        android:background="@color/parent_dark_blue"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/timer"
                    android:gravity="center"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>

