<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">






    <LinearLayout
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:id="@+id/main_layout"
        android:background="@drawable/gradient_border_selector"
        android:layout_width="match_parent"

        android:padding="@dimen/dp_10"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">




            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@color/military_blue"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/class_wise"/>

            <com.app.mschooling.utils.BuzzTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/description"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/black"
                android:text="@string/_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tickLayout"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:padding="@dimen/dp_5"
                android:src="@drawable/tick"
                android:background="@drawable/gradient_solid_circle"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
