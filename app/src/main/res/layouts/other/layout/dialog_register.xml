<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:backgroundTint="@color/military_blue"
                    android:background="@drawable/gradient_circle"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tick"
                    app:tint="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@id/tittle"
                        style="@style/Gotham_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/request_submitted"
                        android:textAlignment="center"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_20" />



                </RelativeLayout>






                <com.app.mschooling.utils.BuzzTextView
                    android:id="@+id/message"
                    style="@style/Gotham_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="@string/delete_this_record"
                    android:textColor="@color/black" />



                <LinearLayout
                    android:id="@+id/actionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20">




                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/ok"
                        style="@style/Gotham_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_button_rounded"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="@string/ok"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_12" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>