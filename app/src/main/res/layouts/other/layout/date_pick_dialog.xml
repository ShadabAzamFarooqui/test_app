<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@id/title"
                        style="@style/Gotham_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/select_date_range"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20" />


                    <LinearLayout
                        android:id="@+id/close"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_5"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/close"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:tint="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <com.app.mschooling.utils.BuzzTextView
                    style="@style/Gotham_Medium"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/from"
                    android:textColor="@color/military_blue"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/gradient_border_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:id="@+id/date1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/date_static"
                        android:inputType="date"
                        android:textColor="@color/grayish_black"
                        android:textSize="16sp" />

                </LinearLayout>


                <com.app.mschooling.utils.BuzzTextView

                    style="@style/Gotham_Medium"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="10dp"
                    android:text="@string/to"
                    android:textColor="@color/military_blue"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/gradient_border_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:id="@+id/date2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/date_static"
                        android:inputType="date"
                        android:textColor="@color/grayish_black"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/submit"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/gradient_button"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>