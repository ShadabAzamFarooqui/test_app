<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/gradient_border_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerFrameLayout"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:background="@drawable/circle_image_bg"
                            android:orientation="vertical" />
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_margin="@dimen/dp_5"
                        android:src="@drawable/app_icon" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_height="wrap_content">
                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/name"
                        android:layout_gravity="center"
                        style="@style/Gotham_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_16" />
                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/enrollmentId"
                        android:layout_gravity="center"
                        style="@style/Gotham_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/divider_menu"/>






            <LinearLayout
                android:id="@+id/totalFeeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    style="@style/Gotham_Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total_marks"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    android:id="@+id/totalMarks"
                    style="@style/font"
                    android:text="2500"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    style="@style/Gotham_Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/obtained_mark"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    android:id="@+id/obtainedMarks"
                    style="@style/font"
                    android:text="2500"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.mschooling.utils.BuzzTextView
                    style="@style/Gotham_Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/percentage"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    android:id="@+id/percentage"
                    style="@style/font"
                    android:text="0.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

         <!--   <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/dueAmount"
                android:layout_gravity="end"
                android:gravity="end"
                style="@style/Gotham_Medium"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="Fee Type"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_14" />-->

        </LinearLayout>



    </LinearLayout>


</LinearLayout>
