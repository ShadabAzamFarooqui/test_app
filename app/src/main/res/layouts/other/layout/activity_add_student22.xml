<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_menu"
    android:orientation="vertical">

    <include layout="@layout/header_back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/category"
                    android:textSize="@dimen/dp_12" />

                <Spinner
                    android:id="@+id/category"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:entries="@array/category"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/religion"
                    android:textSize="@dimen/dp_12" />

                <Spinner
                    android:id="@+id/religion"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:entries="@array/religion"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/blood_group"
                    android:textSize="@dimen/dp_12" />

                <Spinner
                    android:id="@+id/bloodGroup"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:entries="@array/bloodGroup"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/upload_aadhaar_card"
                    android:textSize="@dimen/dp_12" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/dotted_bg">

                        <ImageView
                            android:id="@+id/aadhaarFront"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_5"
                            android:src="@drawable/aadhaar" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/dotted_bg">

                        <ImageView
                            android:id="@+id/aadhaarBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dp_5"
                            android:src="@drawable/aadhaar_back" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/uploadAadhaar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/accept"
                    android:elevation="@dimen/dp_1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:layout_marginRight="@dimen/dp_45"
                        android:gravity="center"
                        android:padding="@dimen/dp_7"
                        android:text="@string/upload"
                        android:textColor="@color/red" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/aadhaar_number"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:id="@+id/aadhaarNumber"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="16"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>


            <Button
                android:id="@+id/submit"
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/gradient_button"
                android:text="@string/save_amp_next"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>

