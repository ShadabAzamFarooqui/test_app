<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/coordinatorLayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.mschooling.utils.BuzzTextView
                    android:id="@id/tittle"
                    style="@style/Gotham_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/select_date_range"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_20" />


                <LinearLayout
                    android:id="@+id/close"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_5"
                        android:gravity="center"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/close"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:tint="@color/black" />
                </LinearLayout>
            </RelativeLayout>


            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/date"
                android:textColor="@color/military_blue"
                android:textSize="15sp" />

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/date"
                style="@style/Gotham_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="date"
                android:textColor="@color/black" />

            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/day"
                android:textColor="@color/military_blue"
                android:textSize="15sp" />

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/day"
                style="@style/Gotham_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="day"
                android:textColor="@color/black" />

            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/description2"
                android:textColor="@color/military_blue"
                android:textSize="15sp" />

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/message"
                style="@style/Gotham_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/delete_this_record"
                android:textColor="@color/black" />



            <LinearLayout
                android:id="@+id/actionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20">


                <com.app.mschooling.utils.BuzzTextView
                    android:id="@+id/edit"
                    style="@style/Gotham_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_button_rounded"
                    android:backgroundTint="#f0f3f7"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:text="@string/edit"
                    android:textAlignment="center"
                    android:textColor="@color/military_blue"
                    android:textSize="@dimen/dp_12" />


                <com.app.mschooling.utils.BuzzTextView
                    android:id="@+id/delete"
                    style="@style/Gotham_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_button_rounded"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:text="@string/delete2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>