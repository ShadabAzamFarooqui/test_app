<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@drawable/mschooling_text_logo" />



        <com.app.mschooling.utils.BuzzTextView
            android:id="@+id/planMessage"
            style="@style/Gotham_Medium"
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/subs_mgs2"
            android:textAlignment="center" />

        <com.app.mschooling.utils.BuzzTextView
            android:id="@+id/attendanceMessage"
            style="@style/Gotham_Medium"
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/attendance_mode_error_message"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/gradient_border"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:visibility="gone">


            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:text="@string/plan"
                android:textAlignment="center"
                android:textColor="@color/military_blue"
                android:textSize="@dimen/dp_10" />


            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/totalPaid"
                style="@style/Gotham_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text="7 Rs."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_22" />

            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:text="@string/per_st_per_mnth"
                android:textAlignment="center"
                android:textColor="@color/military_blue"
                android:textSize="@dimen/dp_10" />


        </LinearLayout>


        <TextView
            android:id="@+id/lastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textAlignment="center"
            android:textColor="@color/black" />


    </LinearLayout>


</LinearLayout>