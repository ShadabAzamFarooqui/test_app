<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:cardUseCompatPadding="true">-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:background="@drawable/gradient_border"
        android:padding="@dimen/dp_5"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="@string/class_other" />

        <com.app.mschooling.utils.BuzzTextView
            style="@style/Gotham_Medium"
            android:id="@+id/clazz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/first_a"
            android:textColor="@color/military_blue" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/subject_other"
            android:visibility="gone"/>

        <com.app.mschooling.utils.BuzzTextView
            android:textSize="@dimen/dp_12"
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="@string/hindi"
            android:textColor="@color/grayish_black" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/time_other"
            android:visibility="gone"/>

        <com.app.mschooling.utils.BuzzTextView
            android:textSize="@dimen/dp_12"
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:text="@string/time_static"
            android:textColor="@color/grayish_black" />


        <com.app.mschooling.utils.BuzzTextView
            android:textSize="@dimen/dp_12"
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/day"
            android:textColor="@color/black" />

    </LinearLayout>


    <!--    </android.support.v7.widget.CardView>-->
</RelativeLayout>
