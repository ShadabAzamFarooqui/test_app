<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context="com.app.mschooling.application.activity.ApplicationListActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient_border"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_margin="2.5dp"
            android:layout_marginTop="2.5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:id="@+id/progressBar"
                        android:layout_centerHorizontal="true"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:layout_margin="@dimen/dp_5"
                        />
                </RelativeLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student_name"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/name"
                        android:textSize="@dimen/dp_17"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black" />


                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:id="@+id/enrolmentId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/enrollment_id_static"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:text="@string/mobile_no"
                        android:id="@+id/mobile"
                        android:textSize="@dimen/dp_14"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        />


                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/classSection"
                        style="@style/Gotham_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_first"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_12" />



                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/male"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:text="@string/blood_group"
                        android:id="@+id/bloodGroup"
                        android:textSize="@dimen/dp_12"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        />











                </LinearLayout>



            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/print"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/accept"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Book"
                        android:layout_width="wrap_content"
                        android:text="@string/view"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/blue"
                        android:layout_height="wrap_content"/>
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>








</LinearLayout>