<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/divider_menu"
    android:layout_height="match_parent"
    tools:context="com.app.mschooling.quiz.activity.student.StudentQuizDashboardActivity">

    <include layout="@layout/header_back"/>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:clickable="true"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_2"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/exams"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="left"
            android:background="@drawable/selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:textColor="@color/military_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="1"
                android:text="@string/examination"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_next_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:clickable="true"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_2"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/createResult"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="left"
            android:background="@drawable/selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:textColor="@color/military_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="1"
                android:text="@string/create_result"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_next_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:clickable="true"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_2"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/result"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="left"
            android:background="@drawable/selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.app.mschooling.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:textColor="@color/military_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_weight="1"
                android:text="@string/result"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_next_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>