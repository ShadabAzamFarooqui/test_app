<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <include layout="@layout/header_back" />

    <LinearLayout
        android:id="@+id/layoutReportIssue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight=".1"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center"
            android:src="@drawable/report" />

        <TextView
            style="@style/font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="@string/report_an_issue"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight=".1"
            android:layout_gravity="center"
            android:src="@drawable/icon_next_grey" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_25"
            android:layout_weight=".1"
            android:layout_gravity="center"
            android:tint="@color/colorPrimary"
            android:src="@drawable/feedback_icon" />

        <TextView
            style="@style/font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="@string/send_feedback"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight=".1"
            android:layout_gravity="center"
            android:src="@drawable/icon_next_grey" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutSuggestNewFeature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight=".1"
            android:layout_gravity="center"
            android:tint="@color/colorPrimary"
            android:src="@drawable/suggession" />

        <TextView
            style="@style/font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight=".8"
            android:text="@string/suggest_new_features"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:src="@drawable/icon_next_grey" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight=".1"
            android:layout_gravity="center"
            android:tint="@color/colorPrimary"
            android:src="@drawable/support_icon" />

        <TextView
            style="@style/font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight=".8"
            android:text="@string/contact_us"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:src="@drawable/icon_next_grey" />

    </LinearLayout>

</LinearLayout>