<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divider_menu"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/header_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:id="@+id/configuration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_20"
                android:clickable="true"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_2"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/divider_menu" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/configurations"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ffe0e0e0" />

                    <LinearLayout
                        android:id="@+id/addClass"
                        android:background="@drawable/selector"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/add_class"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="16dp"
                            android:layout_margin="@dimen/dp_10"
                            android:src="@drawable/icon_next_grey" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ffe0e0e0" />

                    <LinearLayout
                        android:id="@+id/addSubject"
                        android:background="@drawable/selector"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/add_subject"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_margin="@dimen/dp_10"
                            android:src="@drawable/icon_next_grey" />

                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ffe0e0e0" />

                    <LinearLayout
                        android:id="@+id/addComplaintReason"
                        android:background="@drawable/selector"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/add_complaint_reason"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_margin="@dimen/dp_10"
                            android:src="@drawable/icon_next_grey" />
                    </LinearLayout>




                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ffe0e0e0" />

                    <LinearLayout
                        android:id="@+id/addApplicationReason"
                        android:background="@drawable/selector"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/add_application_reason"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_margin="@dimen/dp_10"
                            android:src="@drawable/icon_next_grey" />
                    </LinearLayout>








                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ffe0e0e0" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:id="@+id/generate_qr_code"
                        android:background="@drawable/selector"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/generate_qr_code"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_margin="@dimen/dp_10"
                            android:src="@drawable/icon_next_grey" />
                    </LinearLayout>








                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_20"
                android:clickable="true"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_2"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/divider_menu" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/applications"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ffe0e0e0" />

                    <LinearLayout
                        android:id="@+id/theme"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@drawable/selector"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/change_theme"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="16dp"
                            android:layout_margin="@dimen/dp_10"
                            android:src="@drawable/icon_next_grey" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="#ffe0e0e0" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:background="@drawable/selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="@string/change_language"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_margin="@dimen/dp_10"
                            android:src="@drawable/icon_next_grey" />

                    </LinearLayout>







                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>