<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp">



                <TextView
                    style="@style/Gotham_Medium"
                    android:id="@+id/tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:text="@string/icon"
                    android:textColor="@color/grayish_black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/close"
                    android:layout_width="50dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:rotation="90"
                        android:tint="@color/grayish_black"
                        android:src="@drawable/icon_next_grey"
                        android:gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="342dp"
                tools:layout_editor_absoluteY="16dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">










                            <LinearLayout
                                android:id="@+id/camera"
                                android:background="@drawable/gradient_border"
                                android:layout_width="150dp"
                                android:layout_margin="5dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="15dp">

                                <LinearLayout
                                    android:id="@+id/camera1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/circle"
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                    <ImageView
                                        android:id="@+id/camera2"
                                        android:layout_width="20dp"
                                        android:tint="@color/white"
                                        android:layout_height="20dp"
                                        android:src="@drawable/camera_167"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textColor="@android:color/black"
                                    android:text="@string/camera"
                                    android:textSize="12dp"/>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/gallery"
                                android:background="@drawable/gradient_border"
                                android:layout_width="150dp"
                                android:layout_margin="5dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="15dp">

                                <LinearLayout
                                    android:id="@+id/gallery1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/circle"
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                    <ImageView
                                        android:id="@+id/gallery2"
                                        android:layout_width="20dp"
                                        android:tint="@color/white"
                                        android:layout_height="20dp"
                                        android:src="@drawable/gallery_white"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/text_view_bottom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:textColor="@android:color/black"
                                    android:text="@string/gallery"
                                    android:textSize="12dp"/>

                            </LinearLayout>





                        </LinearLayout>




                    </LinearLayout>
                </ScrollView>
            </FrameLayout>


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>