<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/gradient_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.app.mschooling.utils.BuzzTextView
                    android:id="@+id/feeType"
                    android:layout_weight="1"
                    android:layout_gravity="center"

                    style="@style/Gotham_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fee Type"
                    android:textColor="@color/military_blue"
                    android:textSize="@dimen/dp_16" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/divider_menu"/>






            <LinearLayout
                android:id="@+id/totalFeeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    style="@style/Gotham_Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Fee : "
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    android:id="@+id/totalFee"
                    style="@style/font"
                    android:text="2500"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    style="@style/Gotham_Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Paid Fee : "
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    android:id="@+id/paidFee"
                    style="@style/font"
                    android:text="2500"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.mschooling.utils.BuzzTextView
                    style="@style/Gotham_Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Late Fee Charges : "
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    android:layout_weight="1"
                    android:id="@+id/lateFee"
                    style="@style/font"
                    android:text="0.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/dueAmount"
                android:layout_gravity="end"
                android:gravity="end"
                style="@style/Gotham_Medium"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:text="Fee Type"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/dp_1"
        android:background="@color/divider_menu" />

    <View
        android:layout_width="match_parent"
        android:id="@+id/marginLayout"
        android:visibility="visible"
        android:layout_height="@dimen/dp_80">

    </View>


</LinearLayout>
