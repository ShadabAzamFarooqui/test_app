<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/gradient_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/subject"
                style="@style/Gotham_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subject_w_star"
                android:textColor="@color/military_blue"
                android:textSize="@dimen/text_size_15" />

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/name"
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3">

                <com.app.mschooling.utils.BuzzTextView
                    style="@style/Gotham_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time_other"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    android:id="@+id/time"
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.app.mschooling.utils.BuzzTextView
                    style="@style/Gotham_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duration_other"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />

                <com.app.mschooling.utils.BuzzTextView
                    style="@style/font"
                    android:text="@string/min40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayish_black"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/gradient_button"
            android:orientation="horizontal"
            android:textColor="@color/white">

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/startText"
                style="@style/Gotham_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:textAllCaps="true"
                android:text="@string/start"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/action"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"
                android:src="@drawable/three_dot"
                app:tint="@color/military_blue" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/dp_1"
        android:background="@color/divider_menu" />
</LinearLayout>
