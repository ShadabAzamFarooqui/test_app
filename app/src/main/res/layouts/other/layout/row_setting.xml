<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:background="@drawable/gradient_border"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_5"
                        android:textSize="@dimen/dp_12"
                        android:id="@+id/time"
                        android:textAlignment="textStart"
                        android:text="@string/date_time_static"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/dp_5"
                        android:id="@+id/postedBy"
                        android:textSize="@dimen/dp_12"
                        android:textAlignment="textEnd"
                        android:text="@string/posted_by"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/title"
                        style="@style/Gotham_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/delete"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/notice_title"
                        android:textAlignment="center"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_16" />

                  <LinearLayout
                      android:id="@+id/edit"
                      android:layout_alignParentRight="true"
                      android:layout_width="wrap_content"
                      android:layout_marginRight="@dimen/dp_5"
                      android:padding="@dimen/dp_5"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:visibility="visible"
                          android:layout_width="@dimen/dp_15"


                          android:layout_height="@dimen/dp_15"
                          android:src="@drawable/edit2"/>
                  </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@color/divider_menu"/>
                <LinearLayout
                    android:id="@+id/commonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:id="@+id/value"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:text="200"/>
                </LinearLayout>






            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:id="@+id/marginLayout"
            android:visibility="visible"
            android:layout_height="@dimen/dp_80">

        </View>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>





