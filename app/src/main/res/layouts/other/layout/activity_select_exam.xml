<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_menu"
    android:orientation="vertical">

    <include layout="@layout/header_back" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/examLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/gradient_border_selector"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/select_exam_star"
                    android:textSize="@dimen/dp_12" />

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/exam"
                        style="@style/font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:hint="@string/select_exam"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_5"
                        android:src="@drawable/icon_next_grey" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/classLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border_selector"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/classz"
                    android:textSize="@dimen/dp_12" />

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clazz"
                        style="@style/font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:hint="@string/select_class"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_5"
                        android:src="@drawable/icon_next_grey" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/sectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/section_star"
                    android:textSize="@dimen/dp_12" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/section"
                        style="@style/font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:hint="@string/select_section_w"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_5"
                        android:visibility="gone"
                        android:src="@drawable/icon_next_grey" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/subjectLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border_selector"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/subject"
                    android:textSize="@dimen/dp_12" />

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/subject"
                        style="@style/font"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:hint="@string/select_subject"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_5"
                        android:src="@drawable/icon_next_grey" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_border"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/enter_total_mark"
                    android:textSize="@dimen/dp_12" />

                <EditText
                    android:id="@+id/totalMark"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15" />
            </LinearLayout>



            <Button
                android:id="@+id/submit"
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/gradient_button"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />


            <LinearLayout
                android:id="@+id/uploadLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:visibility="gone">

                <RelativeLayout

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_5">

                    <TextView
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:fontFamily="serif-monospace"
                        android:text="@string/upload_excel"
                        android:textColor="@color/parent_dark_blue"
                        android:textSize="@dimen/text_size_14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/upload"
                        android:layout_alignLeft="@+id/upload"
                        android:layout_alignRight="@+id/upload"
                        android:background="@color/parent_dark_blue"
                        android:visibility="visible" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

