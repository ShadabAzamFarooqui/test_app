<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:background="@drawable/gradient_border_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:text="@string/total_questions"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/totalQuestion"
                        style="@style/Gotham_Book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/total_marks"
                        android:textColor="@color/grayish_black"
                        android:textSize="@dimen/dp_12" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_attempted"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/totalAttempts"
                        style="@style/Gotham_Book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/total_attempts"
                        android:textColor="@color/grayish_black"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/correct_attempted"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/correctAttempts"
                        style="@style/Gotham_Book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/correct_attempted"
                        android:textColor="@color/grayish_black"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/obtained_mark"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/obtainedMarks"
                        style="@style/Gotham_Book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/obtained_mark"
                        android:textColor="@color/grayish_black"
                        android:textSize="@dimen/dp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no_of_attempt"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/noOfAttempts"
                        style="@style/Gotham_Book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/no_of_attempt"
                        android:textColor="@color/grayish_black"
                        android:textSize="@dimen/dp_12" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_time"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/totalTime"
                        style="@style/Gotham_Book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/time"
                        android:textColor="@color/grayish_black"
                        android:textSize="@dimen/dp_12" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <com.app.mschooling.utils.BuzzTextView
                        style="@style/Gotham_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/level"
                        android:textColor="@color/military_blue"
                        android:textSize="@dimen/dp_12" />

                    <com.app.mschooling.utils.BuzzTextView
                        android:id="@+id/level"
                        style="@style/Gotham_Book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="@string/level"
                        android:textColor="@color/grayish_black"
                        android:textSize="@dimen/dp_12" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

