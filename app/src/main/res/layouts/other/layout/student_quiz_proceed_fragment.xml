<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/light_greyish">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:background="@drawable/gradient_border"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp">


            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/gradient_solid_circle"
                android:padding="@dimen/dp_20"
                android:src="@drawable/alert"
                app:tint="@color/white" />


            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/tittle"
                style="@style/Gotham_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/alert"
                android:textColor="@color/military_blue"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />


        </LinearLayout>

        <com.app.mschooling.utils.BuzzTextView
            android:id="@+id/message"
            style="@style/Gotham_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:text="@string/quiz_without_completion"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center">



            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/tvCancel"
                style="@style/Gotham_Medium"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/accept"
                android:textAlignment="center"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:text="@string/cancel"
                android:textColor="@color/green"
                android:textSize="@dimen/dp_16" />

            <com.app.mschooling.utils.BuzzTextView
                android:id="@+id/tvProceed"
                style="@style/Gotham_Medium"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/gradient_button_rounded"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:textAlignment="center"
                android:text="@string/proceed"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>