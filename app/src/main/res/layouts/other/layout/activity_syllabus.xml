<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/divider_menu"
    android:layout_height="match_parent">

    <include layout="@layout/header_back" />




    <LinearLayout
        android:id="@+id/classLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/gradient_border_selector"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_5"
            style="@style/font"
            android:text="@string/classz"
            android:textSize="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/clazz"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                style="@style/font"
                android:textColor="@color/black"
                android:hint="@string/select_class"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_next_grey" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/subjectLayout"
        android:layout_below="@+id/classLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"

        android:background="@drawable/gradient_border_selector"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_5"
            style="@style/font"
            android:text="@string/subject"
            android:textSize="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/subject"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                style="@style/font"
                android:textColor="@color/black"
                android:hint="@string/select_subject"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_next_grey" />
        </LinearLayout>
    </LinearLayout>

















    <Button
        android:layout_below="@+id/subjectLayout"
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"

        android:background="@drawable/gradient_button"
        style="@style/font"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_16" />



</RelativeLayout>