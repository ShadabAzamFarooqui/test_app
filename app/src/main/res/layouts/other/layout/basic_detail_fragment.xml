<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider_menu"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:visibility="gone">


                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/profile_bg"
                        tools:ignore="UselessParent">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/user" />

                        <RelativeLayout
                            android:id="@+id/captureImage"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/profile_bg">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/camera_167"
                                tools:ignore="ContentDescription" />

                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/first_name"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/firstName"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLength="50"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/last_name_w_star"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/lastName"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLength="50"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/student_parent_mobile_number"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/mobile"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/roll_number"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/rollNumber"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:autofillHints=""
                        tools:ignore="LabelFor,TextFields" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/email_w_star"
                        android:textSize="@dimen/sp_12" />

                    <EditText
                        android:id="@+id/email"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:autofillHints=""
                        tools:ignore="LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/gender"
                        android:textSize="@dimen/sp_12" />

                    <Spinner
                        android:id="@+id/gender"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_15"
                        android:entries="@array/gender"
                        android:gravity="center_vertical"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLength="50"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:spinnerMode="dialog"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/dob_tv"
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/dob_star"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/dob"
                        style="@style/font"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dob_tv"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toStartOf="@id/datePicker"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/datePicker"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignBaseline="@+id/dob_tv"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/date_icon"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/classz"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:id="@+id/classLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded,UseCompoundDrawables">

                        <TextView
                            android:id="@+id/clazz"
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_weight="1"
                            android:hint="@string/select_class"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_margin="@dimen/dp_5"
                            android:src="@drawable/icon_next_grey"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sectionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_border"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/section_star"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="RtlHardcoded,UseCompoundDrawables">

                        <TextView
                            android:id="@+id/section"
                            style="@style/font"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_weight="1"
                            android:hint="@string/select_section_w"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_margin="@dimen/dp_5"
                            android:src="@drawable/icon_next_grey"
                            android:visibility="gone"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>


                <com.app.mschooling.utils.BuzzTextView
                    android:id="@+id/optionalHeading"
                    style="@style/Gotham_Medium"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="@string/optional_paper"
                    android:textColor="@color/black"
                    tools:ignore="RtlSymmetry" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5" />


                <Button
                    android:id="@+id/submit"
                    style="@style/font"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/gradient_button"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_16" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</layout>

